{
  "name": "frontend",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "lint": "xo",
    "test": "jest",
    "dev": "run-p serve watch",
    "serve": "node server.js",
    "compile:pug": "node index.js",
    "build:css": "tailwindcss-cli build src/style/tailwind.css -o public/css/tailwind.css",
    "copy:js": "cpx \"src/js/*.js\" dist/js",
    "watch": "onchange 'src/**/*' -- yarn run-p compile:pug copy:js",
    "clean": "rimraf dist",
    "clean:html": "rimraf dist/*.html dist/**/*.html",
    "clean:js": "rimraf dist/*.js dist/**/*.js",
    "clean:css": "rimraf dist/*.css dist/**/*.css"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {}
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|js?|tsx?|ts?)$",
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.mjs$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "mjs"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/preset-env": "^7.12.16",
    "@gabegabegabe/pug-lint-config": "^1.1.0",
    "@types/jest": "^26.0.20",
    "babel-jest": "^26.6.3",
    "cpx": "^1.5.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.6",
    "jest": "^26.6.3",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^2.2.1",
    "pug": "^3.0.0",
    "pug-lint": "^2.6.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.0.3",
    "tailwindcss-cli": "^0.1.2"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  }
}
