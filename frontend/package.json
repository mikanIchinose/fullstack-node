{
  "name": "frontend",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "lint": "xo",
    "test": "jest",
    "dev:pug": "run-p serve watch",
    "serve": "node ./server.js",
    "compile:pug": "node ./compiler.js",
    "watch": "onchange 'src/pug/**/*' -- yarn compile:pug",
    "clean": "rimraf dest",
    "clean:html": "rimraf dest/*.html dest/**/*.html",
    "clean:js": "rimraf dest/*.js dest/**/*.js",
    "clean:css": "rimraf dest/*.css dest/**/*.css"
  },
  "prettier": {
    "semi": false
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/preset-env": "^7.12.16",
    "@gabegabegabe/pug-lint-config": "^1.1.0",
    "@types/jest": "^26.0.20",
    "autoprefixer": "^10.2.4",
    "babel-jest": "^26.6.3",
    "cpx": "^1.5.0",
    "eslint": "^7.19.0",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.6",
    "jest": "^26.6.3",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.2.6",
    "prettier": "^2.2.1",
    "pug": "^3.0.0",
    "pug-lint": "^2.6.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.0.3",
    "xo": "^0.37.1"
  }
}
